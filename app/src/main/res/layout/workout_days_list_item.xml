<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#A5D6A7"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:id="@+id/dayNumberText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_thin"
        android:textColor="@android:color/black"
        tools:text="Day 1:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workoutDayNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#FFF"
            android:textSize="18sp"
            tools:text="Chest, Arms, Legs" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_reps"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_dumbbell"
                tools:srcCompat="@drawable/icon_dumbbell" />

            <TextView
                android:id="@+id/numOfExercisesText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                tools:text="10" />

            <ImageView
                android:id="@+id/imageView_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_av_timer_white_24dp"
                tools:srcCompat="@drawable/ic_av_timer_white_24dp" />

            <TextView
                android:id="@+id/approximateTimeText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="textStart"
                android:textColor="#FFF"
                tools:text="~ 120 min" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>